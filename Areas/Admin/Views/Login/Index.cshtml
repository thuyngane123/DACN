@model DACN.Models.Account
@using DACN.Views.Utilities;
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-header text-center">
                <div class="card-title">Đăng Nhập</div>
            </div>
            <form method="post" asp-action="Index">
                <div class="card-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Message</div>
                    }

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input asp-for="Email"
                               class="form-control"
                               id="email"
                               placeholder="Nhập email"
                               required />
                    </div>
                    <div class="form-group">
                        <label for="password">Mật khẩu</label>
                        <input asp-for="Password"
                               class="form-control"
                               id="password"
                               placeholder="Nhập mật khẩu"
                               required />
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox"
                               class="form-check-input"
                               id="remember"
                               name="RememberMe" />
                        <label class="form-check-label" for="remember">Ghi nhớ đăng nhập</label>
                    </div>
                    <div class="text-center mt-5 text-lg fs-4">
                        <p class="text-gray-600">
                            Bạn chưa có tài khoản? <a asp-controller="Register" asp-action="Index">
                                Đăng Ký
                            </a>.
                        </p>
                        
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Đăng Nhập</button>
                    <a href="/Admin/Login" class="btn btn-danger">Huỷ</a>
                </div>
            </form>
        </div>
    </div>
</div>

