@model DACN.Models.Account
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
<div class="container mt-5">
    <div class="page-inner">
        <div class="page-header">
           
        </div>

        <div class="card">
           
            <div class="card-body">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="AccountId" /> <!-- hoặc AccountId -->

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row align-items-center mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Username">Name</label>
                        <div class="col-sm-10 input-group">
                            <span class="input-group-text">
                                <i class="fa fa-user"></i>
                            </span>
                            <input asp-for="Username" class="form-control" placeholder="Name" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger offset-sm-2"></span>
                    </div>

                    <div class="form-group row align-items-center mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Email">Email</label>
                        <div class="col-sm-10 input-group">
                            <span class="input-group-text">
                                <i class="fa fa-envelope"></i>
                            </span>
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger offset-sm-2"></span>
                    </div>

                    <div class="form-group row align-items-center mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Phone">Mobile</label>
                        <div class="col-sm-10 input-group">
                            <span class="input-group-text">
                                <i class="fa fa-mobile-alt"></i>
                            </span>
                            <input asp-for="Phone" class="form-control" placeholder="Mobile" />
                        </div>
                        <span asp-validation-for="Phone" class="text-danger offset-sm-2"></span>
                    </div>

                    <div class="form-group row align-items-center mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Password">Password</label>
                        <div class="col-sm-10 input-group">
                            <span class="input-group-text">
                                <i class="fa fa-lock"></i>
                            </span>
                            <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger offset-sm-2"></span>
                    </div>

                    <div class="form-group form-check offset-sm-2 mb-3">
                        <input class="form-check-input" type="checkbox" checked />
                        <label class="form-check-label text-primary fw-bold">
                            Remember Me
                        </label>
                    </div>

                    <div class="form-group row">
                        <div class="offset-sm-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a asp-action="Index" class="btn btn-light">Reset</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>